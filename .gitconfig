[alias]
	st = status --short --branch
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ff = pull --ff-only
	co = checkout
	dc = diff --cached
[user]
	email = ivan.habunek@gmail.com
	name = Ivan Habunek
[push]
	default = simple
[core]
	editor = vim
[merge]
	conflictstyle = diff3
	tool = meld
[tag]
	sort = v:refname
